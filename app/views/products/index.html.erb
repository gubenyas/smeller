<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<%= form_tag(controller: "products", action: "parse_new", method: "get") do %>
  <%= label_tag(:t, "URL:") %>
  <%= text_field_tag(:t) %>
  <%= submit_tag("Parse new product") %>
<% end %>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
